<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgound_movie"
    tools:context=".Activity.HomeActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:id="@+id/img_profile_person"
        />
    <TextView
        android:id="@+id/txt_name_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanh Hung"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/img_profile_person"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/txt_email_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hungdangcap99@gmail.com"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_person"
        android:textColor="#a2a4b5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:textSize="20sp"/>
    <ImageView
        android:id="@+id/img_edit_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_person_pin_24"
        app:layout_constraintTop_toBottomOf="@+id/txt_email_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".1"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/txt_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/txt_email_name"
        app:layout_constraintStart_toEndOf="@+id/img_edit_profile"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textSize="25sp"
        />
    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line_border"
        app:layout_constraintTop_toBottomOf="@+id/txt_edit_profile"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/img_my_wallet"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_account_balance_wallet_24"
        app:layout_constraintTop_toBottomOf="@+id/img1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".1"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/txt_my_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Wallet"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/img1"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/img_my_wallet"
        android:layout_marginStart="10dp"
        />
    <ImageView
        android:id="@+id/img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line_border"
        app:layout_constraintTop_toBottomOf="@+id/txt_my_wallet"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/img_language"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_language_24"
        app:layout_constraintTop_toBottomOf="@+id/img2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".1"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/txt_change_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Language"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/img2"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toEndOf="@+id/img_language"
        android:layout_marginStart="10dp"
        android:textSize="25sp"
        />
    <ImageView
        android:id="@+id/img3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line_border"
        app:layout_constraintTop_toBottomOf="@+id/img_language"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_help_center_24"
        app:layout_constraintTop_toBottomOf="@+id/img3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".1"
        android:layout_marginTop="20dp"
        android:id="@+id/img_help_centre"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help Centre"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/img3"
        app:layout_constraintStart_toEndOf="@+id/img_help_centre"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
    />
    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn1"
        app:layout_constraintTop_toBottomOf="@+id/img_help_centre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn2"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/btn2"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>