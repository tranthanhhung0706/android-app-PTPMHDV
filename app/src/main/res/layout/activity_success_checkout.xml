<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgound_movie"
    tools:context=".Activity.SuccessCheckoutActivity">


    <ImageView
        android:id="@+id/img_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/checkout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="90dp"
        />
    <TextView
        android:id="@+id/text_happy_watching"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Happy Watching!"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/img_checkout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="90dp"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#CCCCCC"
        android:textAlignment="center"
        android:text="You have successfully bought the ticket"
        app:layout_constraintTop_toBottomOf="@+id/text_happy_watching"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:textSize="20sp"


        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_my_ticket"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="My Ticket"
        android:textAllCaps="false"
        android:background="@drawable/button_backgound_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_happy_watching"
        android:textColor="@color/white"
        android:layout_marginTop="150dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/text_discover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover new movie?"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_my_ticket"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="90dp"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to home"
        android:textColor="@color/purple_500"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_my_ticket"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/text_discover"
        android:layout_marginLeft="10dp"
        />








</androidx.constraintlayout.widget.ConstraintLayout>